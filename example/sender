#!/usr/bin/env raku

use Stomp::Client;

sub MAIN(Str $message = 'Hello, World', :$login = 'guest', :$password = 'guest', :$port = 61613, :$host = 'localhost', :$queue = 'stomptest') {

	my $client = Stomp::Client.new(:$login, :$password, :$port, :$host);

	await $client.connect;

	$client.send($queue, $message);
}

